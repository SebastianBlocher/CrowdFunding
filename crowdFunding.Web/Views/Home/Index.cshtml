@using crowdFunding.Core.Model
@model List<Project>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Project not found
    </div>

    return;
}

<div class="text-center mainDiv">
    <img src="~/images/outsideofthebox.jpg" alt="company logo">
</div>

<h2 class="trendingH">Trending Projects</h2>
<div class="trending">

    <a class="clickable" id="btnLeft"><i class="fas fa-angle-left"></i></a>

    <div class="mainViewer">
        <div class="content" id="content">
            @foreach (var p in Model)
            {
                @*<div class="card">
                        @p.Name
                    </div>*@
                <div class="card">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">@p.Description</p>
                        <a href="#" class="btn btn-primary">Check it out</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <a class="clickable" id="btnRight"><i class="fas fa-angle-right"></i></a>
</div>





