@using crowdFunding.Core.Model
@model Project

@{
    ViewData["Title"] = "Edit";
}

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        Project could not be found!
    </div>

    return;
}
<h1>Edit</h1>

<form method="post" class="js-project-edit-form">

    <h4>
        Change your projects' information:
    </h4>

    <div class="form-group">
        <label for="Project Title">Project Title</label>
        <input class="js-projectedit-projectname form-control" id="ProjectTitle" placeholder=" Change your project's title" value="@Model.Name">

    </div>

    <div class="form-group">
        <label for="dueto">Due Date:</label>
        <input type="date" id="js-projectedit-dueto" placeholder="Due Date" value="@Model.DueTo.ToString("yyyy-MM-dd")">
    </div>

    <div class="form-group">
        <textlabel for="Name">Project Description</textlabel>
        <textarea id="ProjectDesc" name="ProjectDesc" rows="4" cols="50" value:"@Model.Description">
            Change your project's description...
        </textarea>
        @*<input class="js-projectedit-description form-control" id="ProjectDesc" value="@Model.Description" placeholder="Change your project's description.">*@
    </div>


    <div class="form-group">
        <label class="form-font" for="category">Category:</label>
        <select class="js-project-create-category create-project-form" placeholder="Category:">

            <option value="0">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;-</option>
            <option value="1">Arts</option>
            <option value="2">Comics & Illustration</option>
            <option value="3">Design & Tech</option>
            <option value="4">Film</option>
            <option value="5">Food & Craft</option>
            <option value="6">Games</option>
            <option value="7">Music</option>
            <option value="8">Publishing</option>

        </select>
    </div>
    <div class="form-group">
        <label for="Project Title">Project Title</label>
        <input class="rewardName form-control" id="rewardname" placeholder="Enter your rewards name">

    </div>

    <div class="form-group">
        <label for="Project Title">Project Title</label>
        <input class="rewardDescription form-control" id="rewarddescr" placeholder="Reward Descr">

    </div>
    <div class="form-group">
        <label for="Project Title">Project Title</label>
        <input class="rewardAmount form-control" id="rewardamount" placeholder="Reward Am">

    </div>
    @*<div class="form-group">
            <label for="dueto">Due Date:</label>
            <input type="date" id="rewardName"placeholder="Due Date" value="@Model.DueTo.ToString("yyyy-MM-dd")">
        </div>*@

    <div class="form-group">
        <label for="url">Enter an https:// URL: for your Project's Photo</label>

        <input type="url" name="url" id="js-projectedit-photos"
               placeholder="https://example.com"
               pattern="https://.*" size="30"
               required value="@Model.Photos[0].Url">
    </div>

    <div class="form-group">
        <label for="url">Enter an https:// URL:</label>

        <input type="url" name="url" id="js-projectedit-videos"
               placeholder="https://example.com"
               pattern="https://.*" size="30"
               required value="@Model.Videos[0].Url">
    </div>

    <div class="form-group">
        <label for="Description">Project Description</label>
        <textarea class="js-projectedit-description form-control" id="ProjectDesc" placeholder="Write your description here..." rows="3">@Model.Description</textarea>

    </div>


    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">€</span>
        </div>
        <input type="text" class="js-projectedit-amountrequired form-control" aria-label="Amount Required" value="@Model.AmountRequired">
        <div class="input-group-append">
            @*<span class="input-group-text">.00</span>*@
        </div>
    </div>
    <button type="button" class="js-projectedit-submit-button mb-3 btn btn-primary">
        Update
    </button>

    <div class="alert alert-success js-projectedit-success-alert" role="alert">
        Project was successfully update!
    </div>

    <div class="alert alert-danger js-projectedit-fail-alert" role="alert">
        Project could not be updated!
    </div>

    <div class="form-group" style="visibility:hidden">

        <input class="js-projectedit-projectname form-control" id="prid" value="@Model.ProjectId">

    </div>
</form>