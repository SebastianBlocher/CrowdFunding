@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

@if (Model.User == null)
{
    <div class="alert alert-warning" role="alert">
        User not found
    </div>

    return;
}

<div class="row">
    <div class="col-md-6"></div>   
    <div class="col-md-2">
        <h5 class="card-title-user">@Model.User.FirstName @Model.User.LastName </h5>
    </div>
</div>